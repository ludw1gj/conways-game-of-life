{
  "name": "@ludw1gj/game-of-life-fn",
  "version": "0.9.1",
  "description": "Conway's Game of Life using a HTML5 canvas and a 2D context.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch & nodemon lib",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepublish": "del-cli --force ./lib && npm run build",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "author": "ludw1gj",
  "license": "ISC",
  "keywords": [
    "HTMLCanvasElement",
    "DOM",
    "Typescript"
  ],
  "repository": {
    "type": "git"
  },
  "files": [
    "lib/"
  ],
  "devDependencies": {
    "del-cli": "^5.0.0",
    "prettier": "^1.19.1",
    "typescript": "^3.4.4"
  }
}
